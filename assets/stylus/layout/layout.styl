.viewport
  // sizing
  max-width: 450px
  margin: 0 auto
  // styling
  background: $dark-05


.page
  padding: 40px 10px 80px
  min-height: 100vh
  overflow: hidden
  // position
  position: static
  z-index: 0


.tabbar
  // sizing
  width: stretch
  max-width: inherit
  // position
  position: fixed
  z-index: 1
  bottom: 0


.sheet
  // sizing
  width: stretch
  max-width: inherit
  // position
  position: fixed
  z-index: 2
  bottom: 0


// TEMPORARY


.sheet_tempBlock
  height: 100px
  background: $dark-18
  border-radius: 10px

.components
  gap: 15px
  display: grid
  grid-auto-rows: max-content
  
.charsheet
  gap: 20px
  display: flex
  flex-direction: column
  section
    gap: 15px
    display: flex
    flex-direction: column
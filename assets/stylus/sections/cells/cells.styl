.cells
  // grid
  gap: 5px
  display: grid
  grid-auto-rows: max-content


// CELLS 2X
  
.cells-2x
  grid-template-columns: repeat(2, 1fr)

  columnCellStyle(
    $cellSize: 80px,
    $cellGap: 10px,
    $headingSize: 14px,
  )


// CELLS 3X

.cells-3x
  grid-template-columns: repeat(3, 1fr)


// CELLS 4X

.cells-4x
  grid-template-columns: repeat(4, 1fr)

  columnCellStyle(
    $cellSize: 70px,
    $valuePrimarySize: 20px,
  )


// CELLS 6X

.cells-6x
  grid-template-columns: repeat(6, 1fr)

  columnCellStyle(
    $cellSize: 60px,
    $cellGap: 5px,

    $headingSize: 10px,
    $headingGap: 3px,

    $valuePrimarySize: 20px,
    $valueGap: 2px,
  )

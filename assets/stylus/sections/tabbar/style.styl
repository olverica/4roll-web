// TABBAR STYLE

.tabbar
  gap: 10px
  height: 60px
  padding: 10px
  background: $bg-tabbar
  backdrop-filter: blur(30px)
  

// BUTTONS

.tabbar_button,
.tabbar_counter
  gap: 5px

  p // text
    color: $light-80
    semi-10()

  i // icon
    height: 25px
    border-radius: 25px
    background: $light-80
    color: black
    mix-blend-mode: screen


.tabbar_button
  // static
  opacity: .4
  // active
  &-active
    opacity: 1


.tabbar_counter
  i
    semi-12()




// MOZILLA FIX

@-moz-document url-prefix()

  .tabbar 
    background: $bg-tabbar-alt

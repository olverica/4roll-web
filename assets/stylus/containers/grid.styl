// GRID CONTAINER LAYOUT
  
.grid
  // grid
  display: grid
  grid-auto-rows: fit-content

  &-2x
    grid-template-columns: repeat(2, 1fr)

  &-3x
    grid-template-columns: repeat(3, 1fr)

  &-6x
    grid-template-columns: repeat(6, 1fr)


// GRID CONTAINER STYLES

.grid
  gap: 5px

.grid .sheet
  gap: 10px
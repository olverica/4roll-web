*
  padding: 0
  margin: 0
  background: none
  border: none
  outline: none
  box-sizing: border-box

body
  overflow-x: hidden 

h1,h2,h3,h4,h5,h6,p,a,i,b,small,span,button,input,textarea
  font-family: inherit
  font-weight: inherit
  font-style: normal
  text-align: inherit
  text-decoration: none

button
  cursor: pointer

textarea
  resize: none

img
  display: block
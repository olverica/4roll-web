// SHEET LAYOUT
  
.sheet
  width: 100%
  height: 100%
  // flex
  display: flex
  flex-direction: column-reverse


// SHEET BODY

.sheet_body
  height: max-content
  max-height: stretch
  position: relative
  // grid
  display: grid
  grid-template-rows: max-content 1fr max-content


.sheet_thumb
  position: absolute
  top: 0
  left: 0
  right: 0
  // grid
  display: grid
  place-items: center

  &::before //icon
    content: ""


// SHEET CONTENT

.sheet_content
  overflow-y: overlay
  // grid
  display: grid




// MOZILLA FIX

@-moz-document url-prefix()

  .sheet_body
    max-height: calc(100% - 40px) !important
    
  .sheet_content
    overflow: auto !important
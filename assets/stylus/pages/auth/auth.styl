// AUTH LAYOUT
  
.auth
  // grid
  display: grid
  grid-template-rows: max-content 1fr max-content

  
// AUTH STYLE

.auth
  gap: 60px !important
  padding: 40px 10px !important
  background: 
    linear-gradient(
      alpha(#0D0D0D, .9) 0%, 
      alpha(#0D0D0D, .3) 50%, 
      #0D0D0D 90%
    ),
    url('~/assets/images/authBackground.jpg') 
  background-size: cover
  background-position: center





// COUNTER

.counter
  gap: 5px
  height: 20px
  border-radius: 5px


// CHILD: BUTTON
  
.counter_button
  font-size: 10px

.counter_button-minus
  color: $accent-red
  background: alpha(@color, .2)

.counter_button-plus
  color: $accent-green
  background: alpha(@color, .2)


// CHILD: INPUT

.counter_input
  color: $light-60
  background: $dark-12
  

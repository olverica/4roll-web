// TOGGLER LAYOUT

.toggler
  aspect-ratio: 1
  Icon-Font('4R-icons')
  // grid
  display: grid
  place-items: center
  // animation
  Transition(transform, .2s)

  // state: closed
  &-closed
    transform: rotate(180deg)

// TOGGLER STYLE

.toggler
  height: 20px
  font-size: 12px
  color: $text-label
// INPUT STYLE

.input 
  height: 50px
  gap: 15px
  padding: 15px
  border-radius: 10px
  background: $dark-15
  box-shadow: $dark-15 0 0 0 1px inset
  overflow: hidden

  // STATE: FOCUSED

  &-focused
    background: $dark-12


// CHILDS 

.input_icon
  color: $light-50

  &-primary
    font-size: 20px

  &-secondary
    font-size: 14px


.input_entry
  color: $light-70 
  med-16()

  &::placeholder
    color: $light-60


.input_hint
  color: $light-50
  med-12()




  
// TEXTAREA CHILD: HEADING LAYOUT
 
.textarea_heading
  cursor: pointer
  // flex
  display: flex
  align-items: center

  .textarea_hint
    flex-grow: 1


.textarea_counter
  opacity: 0
  transitions(opacity, .2s)

  &-active
    opacity: 1


.textarea_button
  icon-4R()
  // animation
  transitions(transform, .2s)


// TEXTAREA CHILD: HEADING STYLE

.textarea_heading
  gap: 5px
  height: 20px


.textarea_title
  color: $light-70
  med-16()


.textarea_hint
  color: $light-50
  med-12-i()


.textarea_counter
  color: $light-50
  med-12()


.textarea_button
  margin-left: 10px
  font-size: 12px
  color: $light-50